# ============================================================================
# Unified Environment Configuration for Merged Build Suite
# ============================================================================
# Copy this file to .env and update with your actual values
# cp .env.example .env

# ============================================================================
# REQUIRED: OpenAI API Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Backend API Configuration (AgenticAds)
# ============================================================================
# MongoDB Connection
MONGODB_URL=mongodb://localhost:27017/agentic_ads
# For Docker MongoDB:
# MONGODB_URL=mongodb://admin:password@localhost:27017/agentic_ads?authSource=admin

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRE_MINUTES=60

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
ADMIN_PASSWORD_HASH=

# Backend Server
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ============================================================================
# ChromaDB Configuration (Vector Database)
# ============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ============================================================================
# Optional: Hugging Face API
# ============================================================================
HUGGINGFACE_API_TOKEN=your-hf-token-here

# ============================================================================
# Influencer System Configuration
# ============================================================================
# Avatar Generation
STABILITY_API_KEY=your-stability-api-key-here

# Social Media API Keys (Optional - for actual posting)
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
TWITTER_BEARER_TOKEN=your-twitter-token
TIKTOK_ACCESS_TOKEN=your-tiktok-token

# ============================================================================
# Business Scraping Tool Configuration
# ============================================================================
PRIMARY_INDUSTRY=professional
CAMPAIGN_STYLE=balanced
DELAY_BETWEEN_SCRAPES=2000
MAX_RETRIES=3
DEFAULT_RESULT_LIMIT=20
OUTPUT_FORMAT=csv
OUTPUT_DIRECTORY=output
MIN_LEAD_SCORE=60
ENABLE_LEAD_SCORING=true
PRIORITIZE_HIGH_RATING=true
ENABLE_INDUSTRY_TEMPLATES=true
GENERATE_MULTI_TOUCH=false
MAX_CONTENT_GENERATION=50
ENABLE_DEBUG_LOGGING=false
SAVE_PROGRESS_LOGS=true
AUTO_CLEANUP_OLD_CAMPAIGNS=false

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=AgenticAds
VITE_GA_TRACKING_ID=

# ============================================================================
# MCP Server Configuration (Optional)
# ============================================================================
MCP_SERVER_PORT=8001
